<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".softkeybord.SoftInputChangeActivity">

    <RelativeLayout
        android:id="@+id/linear_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="default/soft" />

        <Button
            android:id="@+id/btn_other_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btn_default"
            android:text="btn_other_activity" />

        <Button
            android:id="@+id/btn_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_default"
            android:layout_marginTop="10dp"
            android:text="wx/soft" />

        <Button
            android:id="@+id/btn_webView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_default"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/btn_wx"
            android:text="btn_webView" />


        <Button
            android:id="@+id/btn_popub_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_wx"
            android:layout_marginTop="10dp"
            android:text="halfbottom/soft" />

        <Button
            android:id="@+id/btn_utils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_popub_window"
            android:layout_marginTop="10dp"
            android:text="utils/soft" />

        <Button
            android:id="@+id/recyclerview_utils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_utils"
            android:layout_marginTop="10dp"
            android:text="recyclerview_utils/soft" />


        <EditText
            android:id="@+id/editText1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview_utils"
            android:hint="editText1" />
    </RelativeLayout>

    <com.shanlin.sxf.softkeybord.SoftInputKeyBordView
        android:id="@+id/softInputKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_btn"
        android:layout_marginTop="150dp"
        android:hint="editText2" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:layout_toRightOf="@+id/editText2"
        android:hint="editText3" />

    <com.shanlin.sxf.softkeybord.KeySoftBordNormalView
        android:id="@+id/softInputNormalKey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</RelativeLayout>