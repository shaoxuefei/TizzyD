<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title1"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/title2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title2"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title3"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title1"
        app:layout_constraintLeft_toRightOf="@+id/tv_title1" />

    <TextView
        android:id="@+id/title4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="title4"
        app:layout_constraintDimensionRatio="9:3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintTop_toBottomOf="@+id/tv_title1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/title5"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/title4"
        app:layout_constraintRight_toLeftOf="@+id/title6"
        android:text="title5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_weight="1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/title6"
        app:layout_constraintTop_toBottomOf="@+id/title4"
        app:layout_constraintLeft_toRightOf="@+id/title5"
        app:layout_constraintRight_toLeftOf="@+id/title7"
        android:text="title6"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_weight="1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/title7"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/title4"
        app:layout_constraintLeft_toRightOf="@+id/title6"
        app:layout_constraintRight_toRightOf="parent"
        android:text="title7"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_weight="1"
        />

</android.support.constraint.ConstraintLayout>