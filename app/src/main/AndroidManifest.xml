<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shanlin.sxf">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.shanlin.sxf.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shanlin.sxf.Main2Activity"
            android:screenOrientation="portrait" />
        <activity android:name="com.shanlin.sxf.Main3Activity" />
        <activity android:name="com.shanlin.sxf.Main4Activity"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.shanlin.sxf.paint.PaintActivity"
            android:screenOrientation="landscape"
            />
        <activity android:name="com.shanlin.sxf.SingerActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.shanlin.sxf.SeekBarActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.shanlin.sxf.PopubWindowActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.shanlin.sxf.diyview.TreasureViewActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.shanlin.sxf.gson.GsonActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".PictureActivity"
            android:screenOrientation="portrait"
            />
    </application>

</manifest>